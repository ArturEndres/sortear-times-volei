    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
            text-align: center;
            padding: 20px;
        }

        h1 {
            margin-bottom: 10px;
        }

        .disclaimer {
            font-size: 14px;
            color: #555;
            margin-bottom: 20px;
        }

        .times {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 20px;
        }

        .time {
            background-color: #e0e0e0;
            border-radius: 10px;
            padding: 15px;
            width: 30%;
        }

        .time h2 {
            margin-bottom: 10px;
        }

        .time ul {
            list-style: none;
            padding: 0;
            text-align: left;
        }

        button {
            margin-top: 20px;
            padding: 10px 20px;
            font-size: 16px;
